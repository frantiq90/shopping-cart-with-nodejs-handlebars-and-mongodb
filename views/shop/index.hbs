{{# each products }}
    <div class="row">
        {{# each this}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img class="image-responsive" src="{{ this.imagePath }}" alt="...">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price">{{ this.price }}</div>
                            <a href="/add-to-cart/{{ this.id }}" class="btn btn-success pull-right" role="button">Add</a>
                        </div>

                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
